root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
tab_width = 2
indent_style = space
insert_final_newline = false
max_line_length = 120

[*.{java, gradle}]
indent_size = 2
tab_width = 2

[*.{har, json, yml, yaml, xml}]
indent_size = 2
tab_width = 2

[{*.http,*.rest}]
indent_size = 0

[{*.markdown,*.md}]
indent_size = 4
tab_width = 4
